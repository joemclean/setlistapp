%header.navbar.navbar-default.navbar-fixed-top.bs-docs-nav
  .container
    .navbar-header
      %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".bs-navbar-collapse"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to 'The Setlist Game', root_path, class: "navbar-brand"
    %nav.collapse.navbar-collapse.bs-navbar-collapse{ :role =>"navigation"}
      %ul.nav.navbar-nav
        %li
          =link_to 'Upcoming Shows', '#'
        %li
          =link_to 'My Setlists', '#'
        %li
          =link_to 'Rankings', '#'
      %ul.nav.navbar-nav.navbar-right
        -if current_user
          %li
            = link_to current_user.name, current_user
          %li
            = link_to "Sign out", signout_path
        -else
          %li
            =link_to "Sign in with Twitter", "/auth/twitter"
