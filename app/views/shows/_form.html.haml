= form_for @show do |f|
  - if @show.errors.any?
    #error_explanation
      %h2= "#{pluralize(@show.errors.count, "error")} prohibited this show from being saved:"
      %ul
        - @show.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :venue
    = f.text_field :venue
  .field
    = f.label :time
    = f.text_field :time
  .actions
    = f.submit 'Save'
