h1 Listing shows

table.table
  tr
    th Name
    th Date
    th Venue
    th Time
    th
    th

  - @shows.each do |show|
    tr
      td= show.name + " on " + show.date
      td
        ul Setlists for this show:
        - show.setlists.each do |setlist|
          li
            = link_to ("Setlist created by " + setlist.user.name), setlist
      td= show.venue
      td= show.time
      td= link_to 'Make a setlist for this show', new_show_setlist_path(show.id), class: "btn btn-primary"
      td
        .btn-group
          = link_to 'Edit', edit_show_path(show), class: "btn btn-default"
          = link_to 'Destroy', show, :method => :delete, class: "btn btn-default", :data => { :confirm => 'Are you sure?' }

br

= link_to 'New Show', new_show_path, class: "btn btn-primary"
